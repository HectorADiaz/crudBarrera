@model List<appEjercicio.Models.TableViewModels.materiaTableViewModel>
@{
    ViewBag.Title = "Index";
}

<h2> Materias</h2>

<div class="row">
    <div class="col-lg-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href = '@Url.Content("~/materias/Add")'" value="Nueva Materia" />
    </div>
</div>

<br>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th></th>

            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.idMateria</td>
                    <td>@oElemento.nombre</td>
                    <td>
                        <input type="button" value="Eliminar"  class="btn btn-danger" />
                        <input type="button" class="btn btn-success" onclick="document.location.href = '@Url.Content("~/materias/Edit/" + oElemento.idMateria)'" value="Editar" />

                    </td>
                </tr>
            }
        </table>
    </div>
</div>


