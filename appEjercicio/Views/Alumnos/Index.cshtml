@model List<appEjercicio.Models.TableViewModels.AlumnoTableViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Alumnos</h2>

<div class="row">
    <div class="col-lg-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href = '@Url.Content("~/Alumnos/Add")'" value="Nuevo Alumno" />
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Grado</th>
                <th></th>

            </tr>
            @foreach (var oElemento in Model)
            {
        <tr>
            <td>@oElemento.idAlumno</td>
            <td>@oElemento.nombre</td>
            <td>@oElemento.idGrado</td>
            <td>
                <input type="button" value="Eliminar" onclick="document.location.href = '@Url.Content("~/Alumnos/Delete/" + oElemento.idAlumno)'" class="btn btn-danger" />
                <input type="button" class="btn btn-success" onclick="document.location.href = '@Url.Content("~/Alumnos/Edit/" + oElemento.idAlumno)'" value="Editar" />

            </td>
        </tr>
            }
        </table>
    </div>
</div>


