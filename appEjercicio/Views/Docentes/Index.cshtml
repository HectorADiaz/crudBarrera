@model List<appEjercicio.Models.TableViewModels.DocentesTableViewModels>
@{
    ViewBag.Title = "Index";
}

<h2>Docentes</h2>
<div class="row">
    <div class="col-lg-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href = '@Url.Content("~/Docentes/Add")'"  value="Nuevo" />
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th></th>

            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.idDocente </td>
                    <td>@oElemento.nombre</td>
                    <td>
                        <input type="button" value="Eliminar" class="btn btn-danger" />
                        <input type="button" class="btn btn-success" value="Editar" />

                    </td>
                </tr>
            }
        </table>
    </div>
</div>

