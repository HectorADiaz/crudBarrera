@model appEjercicio.Models.ViewModels.DocenteViewModel
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>


<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Add", "Docentes", FormMethod.Post, new { role = "Form", @class = "" }))
        //para apertura de formulario, utilizando el metodo post
        {

            @Html.LabelFor(d => d.nombre)//d => alias
            @Html.TextBoxFor(d => d.nombre, new { @class = "form-control" })
            @Html.ValidationMessage("nombre", new { @class = "text-danger" })



            <div style="text-align:right;">
                <br>
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>
        }

    </div>
</div> 